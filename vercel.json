{
    "version": 2,
    "builds": [
        {
            "src": "server/api/index.js",
            "use": "@vercel/node"
        },
        {
            "src": "client/dist/**",
            "use": "@vercel/static"
        }
    ],
    "routes": [
        {
            "src": "/ws",
            "dest": "/server/api/index.js"
        },
        {
            "src": "/api/(.*)",
            "dest": "/server/api/index.js"
        },
        {
            "src": "/(.*\\.\\w+)",
            "dest": "/client/dist/$1"
        },
        {
            "src": "/(.*)",
            "dest": "/client/dist/index.html"
        }
    ]
}