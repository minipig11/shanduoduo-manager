{
    "version": 2,
    "builds": [
        {
            "src": "client/**/*",
            "use": "@vercel/static"
        },
        {
            "src": "server/api/index.js",
            "use": "@vercel/node"
        }
    ],
    "routes": [
        {
            "src": "/",
            "dest": "/client/index.html"
        },
        {
            "src": "/api/(.*)",
            "dest": "/server/api/index.js"
        },
        {
            "src": "/(.*)",
            "dest": "/client/$1"
        }
    ]
}